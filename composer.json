{
  "name": "iGusev/mystem",
  "description": "Yandex Mystem wrapper",
  "keywords": [
    "yandex",
    "stemmer",
    "russian",
    "mystem"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Ilya Gusev",
      "email": "mail@igusev.ru"
    }
  ],
  "require": {
    "php": "^7.0",
    "ext-mbstring": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "5.*",
    "squizlabs/php_codesniffer": "3.*"
  },
  "scripts": {
    "post-install-cmd": [
      "Mystem\\MystemBinaryInstaller::install"
    ],
    "post-update-cmd": [
      "Mystem\\MystemBinaryInstaller::update"
    ]
  },
  "autoload": {
    "psr-4": {
      "Mystem\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mystem\\Tests\\": "tests"
    }
  }
}